<p id="notice"><%= notice %></p>

<div class="container">
      <div class="row">
        <div class="col-sm-3">
           <%= render 'users/side', user: current_user %>
          <%= render 'users/form', book: @book %>
        </div>

        <div class="col-sm-9">
          <h1>Users</h1>

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th></th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= attachment_image_tag user, :profile_image, :fill, size: "40x40", format: 'jpeg', fallback: 'no_image.jpg', class: "pull-left profile-img" %>
                  </td>
                  <td><%= user.profile_image_id %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>


        </div>

      </div>
</div>